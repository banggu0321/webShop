<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>webShop</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
  	<param-name>userid</param-name>
  	<param-value>hr</param-value>
  </context-param>
  <context-param>
  	<param-name>userpass</param-name>
  	<param-value>1234</param-value>
  </context-param>
  
  <!-- Filter등록 ==> @WebFilter("*.do") -->
  <filter>
  	<filter-name>encodeFilter</filter-name>
	<filter-class>com.kosta.filterListener.EncodeFilter</filter-class>  
  </filter>
  <filter-mapping>
  	<filter-name>encodeFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- <filter-mapping>
  	<filter-name>encodeFilter</filter-name>
  	<url-pattern>*.do2</url-pattern>
  </filter-mapping> -->
  
  <!-- 에러페이지 -->
  <error-page>
  	<error-code>500</error-code>
  	<location>/error/errorPage_500.jsp</location>
  </error-page>
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/errorPage_404.jsp</location>
  </error-page>
  
  <!-- 서블릿 요청에 대한 설정을 XML에서 하기....@webServlet와 같다 -->
  <servlet>
  	<servlet-name>configTest</servlet-name>
  	<servlet-class>com.kosta.controller2.ServletConfigTest</servlet-class>
  	<!-- class는 패키지,클래스이름 -->
  	<init-param>
  		<param-name>myphone</param-name>
  		<param-value>010-1234-5678</param-value>
  	</init-param>
  	<init-param>
  		<param-name>myaddress</param-name>
  		<param-value>서울시 노원구</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>configTest</servlet-name>
  	<url-pattern>/ServletConfigTest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>configTest</servlet-name>
  	<url-pattern>/config1</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>configTest</servlet-name>
  	<url-pattern>/config2</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>second</servlet-name>
  	<servlet-class>com.kosta.controller.SecondServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>second</servlet-name>
  	<url-pattern>/aa</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>second</servlet-name>
  	<url-pattern>/bb</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
 	<description>Oracle Datasource example</description>
 	<res-ref-name>jdbc/myoracle2</res-ref-name>
 	<res-type>javax.sql.DataSource</res-type>
 	<res-auth>Container</res-auth>
  </resource-ref>
  
  <jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<url-pattern>*.html</url-pattern>
			<include-prelude>/common/header.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
  
</web-app>